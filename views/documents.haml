#documents
  - @bitstreams.each do |bitstream|
    .doclist
      %a{ href: "/documents?doc_id=%s" % bitstream.id }
        #{bitstream.file_name} (names: #{ bitstream.names.count })

- if @bitstream
  #document_content
    - @bitstream.names.sort_by(&:name).each do |name|
      - current_name = params['name_id'].to_i == name.id ? 'current_name' : nil
      %a{ href: "/names/%s" % name.id, class: current_name } #{name.name},
    %pre= @bitstream_text
